<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>
  <strong>Choose an existing owner:</strong><br>
  <%owners.each do |owner|%>
      <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.name%>" <%= 'checked' if @pet.owner.name.include?(owner.name) %>><%=owner.name%></input>
  <%end%>

  <br>

  <strong>and/or, create a new owner:</strong>

  <br>

  <label>name:</label>

  <input  type="text" name="owner[name]" id="owner_name">

  <br>
  <input type="submit" value="Update Pet">
</form>